export component Board inherits Rectangle {
    in property <color> black-color: #121212;
    in property <color> white-color: #FFFFFF;

    background: white-color;

    callback square-clicked(int);

    for index in 32 : Rectangle {
        x: mod(index, 4) * (parent.width * 25%) + parent.width * (mod(index, 8) < 4 ? 0% : 12.5%);
        y: floor(index / 4) * (parent.height * 12.5%);
	
	width: 12.5%;
	height: 12.5%;

	background: black-color;

	TouchArea {
	    width: parent.width;
	    height: parent.height;

	    clicked => {
		square-clicked(index);
	    }
	}
    }
}
